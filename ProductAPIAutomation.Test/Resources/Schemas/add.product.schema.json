{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Product",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (UUID-like string)"
    },
    "name": {
      "type": "string",
      "description": "Product name"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "data": {
      "type": "object",
      "properties": {
        "year": {
          "type": "integer"
        },
        "price": {
          "type": "number"
        },
        "CPU model": {
          "type": "string"
        },
        "Hard disk size": {
          "type": "string"
        }
      },
      "required": [ "year", "price", "CPU model", "Hard disk size" ],
      "additionalProperties": false
    }
  },
  "required": [ "id", "name", "createdAt", "data" ],
  "additionalProperties": false
}
